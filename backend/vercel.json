{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "20.x",
        "includeFiles": [
          "db/**",
          "routes/**",
          "models/**",
          "controller/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    }
  ]
}