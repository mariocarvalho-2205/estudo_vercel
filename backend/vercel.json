{
	"version": 2,
	"builds": [
		{
			"src": "index.js",
			"use": "@vercel/node",
			"config": {
				"maxLambdaSize": "50mb",
				"nodeVersion": "20.x",
				"includeFiles": [
          "db/**",
          "node_modules/pg/**",
          "node_modules/pg-hstore/**"
        ],
        "supportsResponseStreaming": true
			}
		}
	],
	"routes": [
		{
			"src": "/.*",
			"dest": "index.js"
		}
	]
}
